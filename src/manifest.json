{
  "manifest_version": 2,
  "name": "__MSG_Name__",
  "version": "3.0.4",

  "description": "__MSG_Description__",
  "author": "RTa_technology",
  "homepage_url": "https://github.com/RTa-technology/add-tag-description-system",

  "permissions": ["storage"],
  "content_scripts": [{
      "matches": ["http://www.scp-wiki.net/*","http://*.wikidot.com/*","http://www.scpwiki.com/*"],
      "js": ["js/prototype.js","js/content.js"],
      "run_at": "document_end"
    }],
  "browser_action": {
      "default_title": "system"
  },
  "icons": {
      "48": "images/48.png",
      "128": "images/128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html"
}
